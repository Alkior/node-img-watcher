<h1>Image generator</h1>

<form action="/" method="post">
    <input type="text" class="form-control mb-2" placeholder="Enter image params" required name="prompt">
    <select class="form-control mb-2" name="size" >
        <option value="256x256">256x256</option>
        <option value="512x512">512x512</option>
        <option value="1024x1024">1024x1024</option>
    </select>
    <input type="number" class="form-control mb-2" name="number" value="1">
    <button type="submit" class="btn btn-primary">Generate</button> 
</form>

{{#if imageData}}
    <div class="row">
        {{#each imageData}}
            <img src="{{this.url}}" alt="Generated img" class="img-fluid rounded">
        {{/each}}
    </div>
{{/if}}